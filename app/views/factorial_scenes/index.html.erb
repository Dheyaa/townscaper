<p id="notice"><%= notice %></p>

<h1>Listing Factorial Scenes</h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>Vertices number</th>
      <th>Space ratio</th>
      <th>Position difference</th>
      <th>Colour difference</th>
      <th>Scene score</th>
      <th>Admin panel</th>
      <th>User panel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factorial_scenes.each do |factorial_scene| %>
      <tr>
        <td><%= factorial_scene.file_name %></td>
        <td><%= factorial_scene.vertices_number %></td>
        <td><%= factorial_scene.space_ratio %></td>
        <td><%= factorial_scene.position_difference %></td>
        <td><%= factorial_scene.colour_difference %></td>
        <td><%= factorial_scene.scene_score %></td>
        <td><%= factorial_scene.admin_panel_id %></td>
        <td><%= factorial_scene.user_panel_id %></td>
        <td><%= link_to 'Show', factorial_scene %></td>
        <td><%= link_to 'Edit', edit_factorial_scene_path(factorial_scene) %></td>
        <td><%= link_to 'Destroy', factorial_scene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

