<p id="notice"><%= notice %></p>

<h1>Listing Position Scenes</h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>Vertices number</th>
      <th>Space ratio</th>
      <th>Position difference</th>
      <th>Colour difference</th>
      <th>Scene score</th>
      <th>Admin panel</th>
      <th>User panel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @position_scenes.each do |position_scene| %>
      <tr>
        <td><%= position_scene.file_name %></td>
        <td><%= position_scene.vertices_number %></td>
        <td><%= position_scene.space_ratio %></td>
        <td><%= position_scene.position_difference %></td>
        <td><%= position_scene.colour_difference %></td>
        <td><%= position_scene.scene_score %></td>
        <td><%= position_scene.admin_panel_id %></td>
        <td><%= position_scene.user_panel_id %></td>
        <td><%= link_to 'Show', position_scene %></td>
        <td><%= link_to 'Edit', edit_position_scene_path(position_scene) %></td>
        <td><%= link_to 'Destroy', position_scene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

